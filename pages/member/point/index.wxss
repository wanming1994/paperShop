
page {
  background: #f1f1f1;
  height: 100%;
  overflow: hidden;
}
.viewPoint{
  height:270rpx;
  background: linear-gradient(to right, #ff547b , #ff9db4); /* 标准的语法 */
  color:#fff;
}
.viewPoint .title{
  padding-top: 40rpx;
}
.viewPoint .clr-white{
  padding: 24rpx 0;
}
.viewPoint .store{
  padding: 6rpx 10rpx 6rpx 20rpx;
  border: 1px solid #fff;
  display: inline-block;
  border-radius: 40rpx;
}
swiper {
  width: 100%;
  height: 100%;
}

swiper-item {
  overflow-y: auto;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  /* padding-top: 50px; */
}

.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  /* position: absolute; */
  /* top: 0; */
  background: #f1f1f1;
  z-index: 1;
}

.on {
  color: #ff547b;
}

.on::after {
  display: block;
  position: absolute;
  width: 31%;
  left: 35%;
  content: '';
  height: 2px;
  background: #ff547b;
}


.top {
  /* position: fixed;
  top: 0; */
  display: flex;
  justify-content: space-around;
  font-size: 33rpx;
  background: #fafafa;
  margin-top: 2%;
  border-bottom:2px solid #ececec;
}

.top>view {
  width: 100%;
  text-align: center;
  line-height: 40px;
  position: relative;
}

scroll-view {
  height: 100%;
}

.tips {
  margin: 0;
  padding-top: 5px;
}


.bill_wrapper {
  overflow-y: scroll;
  height: 100%;
  -webkit-overflow-scrolling: touch;
}
.bill_bd {
  display: flex;
  font-size: 28rpx;
  padding: 10px 0;
  border-bottom: 1px solid #d9d9d9;
}

.bill_bd .bill_type {
  flex: 2;
  text-align: center;
  line-height: 2.5;
}

.bill_bd .bill_date {
  flex: 8;
}

.bill_bd .bill_date view+view {
  margin-top: 10rpx;
}

.bill_bd .bill_amount {
  flex: 3;
  text-align: right;
  padding-right: 10px;
}


.ordersWrap {
  background: #fff;
  margin-bottom: 20rpx;
}

.ordersWrap>view, .ordersWrap .flexC {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
}

.title, .details, .orderTotal {
  position: relative;
}

.details {
  align-items: stretch !important;
}

.title image {
  width: 60rpx;
  height: 60rpx;
}

.title .name {
  margin-right: auto;
  margin-left: 30rpx;
}

.orderImg image {
  width: 200rpx;
  height: 200rpx;
}

.shopName {
  width: 420rpx;
}

.shopInfo {
  display: flex;
  flex: 1;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
  padding: 20rpx 0 20rpx 20rpx;
}

.shopNumber {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.orderTotal {
  justify-content: flex-end !important;
}

.orderTotal>view {
  margin-left: 30rpx;
}

.method {
  justify-content: flex-end !important;
  min-height: 0;
  padding: 0 20rpx !important;
}

.method::after {
  display: none;
}

.method>view {
  margin: 20rpx 0 20rpx 30rpx;
  border: 1px solid #d9d9d9;
  line-height: 1.6;
  border-radius: 10rpx;
  padding: 6rpx 40rpx;
}

.scrollWrap {
  width: 100%;
  height: 100%;
  overflow-y: scroll;
}

.confirmBtn {
  background: #d9141e;
  color: #fff;
  border: 1px solid #d9141e !important;
}
