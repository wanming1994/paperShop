/* pages/member/exchange/exchange.wxss */
.container{
  background: #fff;
  height: 100%;
}
.productList image{
  width: 100%;
  display: block
}
.productList .word{
  background: #2963ad;
}
.productList .word text{
  margin: 10px 0;
  color: #2963ad;
  background: #fff;
  padding: 5px 0;
  border-radius: 20px;
  display: inline-block;
  width: 56vw;
  
}
.break{
  background: #f4f4f4;
  height: 20px;
  margin: 2% 0;
}

.actionContent {
  /* position: absolute; */
  position: fixed;
  width: 100%;
  background: #fff;
  left: 0;
  bottom: 0;
  z-index: 10002;
}

.actionNext {
  position: fixed;
  width: 86vw;
  height: 50vh;
  background: #fff;
  border-radius: 20px;
  top: 16%;
  left: 7vw;
  z-index: 10003;
  padding: 5%;
  box-sizing: border-box;
}

.actionNext>view {
  display: flex;
  flex-wrap: nowrap;
  white-space: nowrap;
  line-height: 10vh;
  justify-content: flex-start;
}

.actionNext input{
  float: left;
  width: 40vw;
  height: 10vh;
  line-height: 10vh;
}

.nextBtn {
  background: #ff666a;
  color: #fff;
  display: block !important;
  width: 50%;
  padding: 5px 20px;
  border-radius: 5px;
  margin: 5vh auto 0;
  text-align: center;
  line-height: 2 !important;
}

.nextTitle {
  min-width: 30vw;
}

.nextClose{
  position: absolute;
  width: 30px;
  height: 30px;
  top: 10px;
  right: 5%;
}


.actionTitle {
  padding: 0 20rpx;
}

view {
  overflow: visible;
}

.actionTitle .left image {
  width: 160rpx;
  height: 160rpx;
  position: relative;
  top: -40rpx;
}

.actionTitle .center {
  padding-left: 20rpx;
}

.actionTitle .right image {
  width: 50rpx;
  height: 50rpx;
}

.actionSpecifications {
  padding: 2% 20rpx;
}

.actionItemBtn {
  padding: 20rpx 0;
}

.actionItemBtn text {
  display: inline-block;
  padding: 10rpx 20rpx;
  margin: 0 20rpx 20rpx 0;
  white-space: nowrap;
  background: #efeff4;
  color: #999;
  border-radius: 12rpx;
}

.actionItemBtn text.active {
  background: #ffa73d !important;
  color: #fff !important;
}

.actionItemBtn text.canTap {
  color: #000;
}

.actionNumber {
  padding: 2% 20rpx;
}

.actionNumber .amount {
  display: flex;
  width: 210rpx;
  position: relative;
}

.actionNumber .amount::after {
  content: " ";
  width: 200%;
  height: 200%;
  position: absolute;
  top: 0;
  left: 0;
  border: 1px solid rgba(0, 0, 0, 0.2);
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  box-sizing: border-box;
  border-radius: 10px;
}

.actionNumber .amount input {
  display: block;
  position: relative;
}

.actionNumber .amount input::after {
  content: " ";
  width: 200%;
  height: 200%;
  overflow-x: scroll;
  position: absolute;
  top: 0;
  left: 0;
  border-left: 1px solid rgba(0, 0, 0, 0.2);
  border-right: 1px solid rgba(0, 0, 0, 0.2);
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  box-sizing: border-box;
}

.actionNumber .amount button, .amount input {
  width: 70rpx;
  height: 70rpx !important;
  min-height: 70rpx !important;
  padding: 0;
  margin: 0;
  line-height: 70rpx !important;
  background: #fff;
  text-align: center;
  background: transparent;
  z-index: 999;
}

.actionNumber .amount button::after {
  border: none !important;
}

.defaultBtn {
  margin: 20rpx auto 60rpx;
}

.actionMask {
  /* position: absolute; */
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1001;
  box-sizing: border-box;
}