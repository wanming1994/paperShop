  <block wx:for="{{categoryList}}" wx:key="item.id">
    <view class='f14 tc categoryName'>
      <text class="line"></text>
      <text class="text">{{item.name}}</text>
      <text class="line"></text>
    </view>
    <block wx:if='{{index==0}}'>
      <view wx:for="{{item.goodsList}}" wx:key="pitem.id" wx:for-item="pitem">
        <view class='break'></view>
        <view class='imageTwo productList' bindtap='goProductDeatil' data-id="{{pitem.id}}">
          <image src='{{pitem.list_pic_url}}' mode="widthFix"></image>
        </view>
      </view>
    </block>
    <block wx:if='{{index==1}}'>
      <view  class='b'>
        <view  wx:for="{{item.goodsList}}" wx:key="pitem.id" wx:for-item="pitem" class='item tl' bindtap='goProductDeatil' data-id="{{pitem.id}}">
          <image class="img" src="{{pitem.list_pic_url}}" background-size="cover"></image>
          <text class="name overone">{{pitem.name}}</text>
          <text class="price bold">ï¿¥{{pitem.retail_price}}</text>
        </view>
      </view>
